<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/iv_item_icon"
        android:layout_weight="0"
        android:src="@drawable/defaultpic"
        android:layout_width="@dimen/item_list_iv_WandH"
        android:layout_height="@dimen/item_list_iv_WandH" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_item_title"
            android:text="@string/item_list_title"
            android:textSize="@dimen/item_list_title_tv_size"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_item_content"
            android:text="@string/item_list_simple_content"
            android:textSize="@dimen/item_list_content_tv_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0"
            android:id="@+id/tv_item_time"
            android:text="@string/item_list_TIME"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>